{% extends 'panel.html.twig' %}

{% block panel_name %}Passengers{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a href="{{ path('passenger_index') }}">Passenger</a>
        </li>
        <li class="active">
            <a href="{{ path('passenger_new') }}">Create a new Passenger</a>
        </li>
    </ol>
{% endblock %}

{% block panel %}
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="datatable-example">
        <thead>
        <tr>
            <th>Id</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Passport number</th>
            <th>Dob</th>
            <th style="    width: 100px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for fiPassenger in passengers %}
            <tr class="odd gradeX">
                <td>
                    <a href="{{ path('passenger_show', { 'id': fiPassenger.id }) }}">{{ fiPassenger.id }}</a>
                </td>
                <td>{{ fiPassenger.Firstname }}</td>
                <td>{{ fiPassenger.Lastname }}</td>
                <td>{{ fiPassenger.passportNumber }}</td>
                <td>{{ fiPassenger.dob|date("Y-m-d") }}</td>
                <td style="text-align: right">
                    <a href="{{ path('passenger_show', { 'id': fiPassenger.id }) }}">
                        <i class="glyph-icon tooltip-button  icon-pencil"></i>
                    </a>
                    <a href="{{ path('passenger_edit', { 'id': fiPassenger.id }) }}">
                        <i class="glyph-icon tooltip-button icon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
