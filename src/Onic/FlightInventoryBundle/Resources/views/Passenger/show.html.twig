{% extends 'panel.html.twig' %}

{% block panel %}
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="datatable-example">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ passenger.id }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ passenger.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ passenger.lastname }}</td>
        </tr>
        <tr>
            <th>Passport number</th>
            <td>{{ passenger.passportNumber }}</td>
        </tr>
        <tr>
            <th>Dob</th>
            <td>{{ passenger.dob|date("Y-m-d") }}</td>
        </tr>
        </tbody>
    </table>

    <div class="bg-default content-box text-center pad20A mrg25T">
        {{ form_start(delete_form) }}
            <a href="{{ path('passenger_index') }}" class="btn btn-border btn-alt border-default font-default">back</a>
            <a href="{{ path('passenger_edit', { 'id': passenger.id }) }}" class="btn btn-border btn-alt border-default font-default">Edit</a>
            <button class="btn btn-primary">Delete</button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
