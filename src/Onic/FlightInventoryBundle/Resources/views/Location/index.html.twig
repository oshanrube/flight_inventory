{% extends 'panel.html.twig' %}

{% block panel_name %}Locations{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a href="{{ path('location_index') }}">Location</a>
        </li>
        <li class="active">
            <a href="{{ path('location_new') }}">Create a new Location</a>
        </li>
    </ol>
{% endblock %}

{% block panel %}
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="datatable-example">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th style="    width: 100px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for fiLocation in locations %}
            <tr class="odd gradeX">
                <td>
                    <a href="{{ path('location_show', { 'id': fiLocation.id }) }}">{{ fiLocation.id }}</a>
                </td>
                <td>{{ fiLocation.name }}</td>
                <td style="text-align: right">
                    <a href="{{ path('location_show', { 'id': fiLocation.id }) }}">
                        <i class="glyph-icon tooltip-button  icon-pencil"></i>
                    </a>
                    <a href="{{ path('location_edit', { 'id': fiLocation.id }) }}">
                        <i class="glyph-icon tooltip-button icon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
