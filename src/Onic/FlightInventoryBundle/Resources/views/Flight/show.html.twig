{% extends 'panel.html.twig' %}

{% block panel %}
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="datatable-example">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ flight.id }}</td>
        </tr>
        <tr>
            <th>Aircraft</th>
            <td>{{ flight.idaircraft }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ flight.price }}</td>
        </tr>
        <tr>
            <th>Departure</th>
            <td>{{ flight.departure|date("Y-m-d H:i:s") }}</td>
        </tr>
        <tr>
            <th>Arrival</th>
            <td>{{ flight.arrival|date("Y-m-d H:i:s") }}</td>
        </tr>
        <tr>
            <th>Origin</th>
            <td>{{ flight.idorigin }}</td>
        </tr>
        <tr>
            <th>Destination</th>
            <td>{{ flight.iddestination }}</td>
        </tr>
        </tbody>
    </table>

    <div class="bg-default content-box text-center pad20A mrg25T">
        {{ form_start(delete_form) }}
        <a href="{{ path('flight_index') }}" class="btn btn-border btn-alt border-default font-default">back</a>
        <a href="{{ path('flight_edit', { 'id': flight.id }) }}" class="btn btn-border btn-alt border-default font-default">Edit</a>
        <button class="btn btn-primary">Delete</button>
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
