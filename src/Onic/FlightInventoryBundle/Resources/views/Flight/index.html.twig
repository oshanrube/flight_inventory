{% extends 'panel.html.twig' %}

{% block panel_name %}Flights{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a href="{{ path('flight_index') }}">Flight</a>
        </li>
        <li class="active">
            <a href="{{ path('flight_new') }}">Create a new Flight</a>
        </li>
    </ol>
{% endblock %}

{% block panel %}
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="datatable-example">
        <thead>
        <tr>
            <th>Id</th>
            <th>Aircraft</th>
            <th>Price</th>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Origin</th>
            <th>Destination</th>
            <th style="    width: 100px;">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for fiFlight in flights %}
            <tr class="odd gradeX">
                <td>
                    <a href="{{ path('flight_show', { 'id': fiFlight.id }) }}">{{ fiFlight.id }}</a>
                </td>
                <td>{{ fiFlight.idaircraft }}</td>
                <td>{{ fiFlight.price }}</td>
                <td>{{ fiFlight.departure|date("Y-m-d H:i:s") }}</td>
                <td>{{ fiFlight.arrival|date("Y-m-d H:i:s") }}</td>
                <td>{{ fiFlight.idorigin }}</td>
                <td>{{ fiFlight.iddestination }}</td>
                <td style="text-align: right">
                    <a href="{{ path('flight_show', { 'id': fiFlight.id }) }}">
                        <i class="glyph-icon tooltip-button  icon-newspaper-o"></i>
                    </a>
                    <a href="{{ path('flight_edit', { 'id': fiFlight.id }) }}">
                        <i class="glyph-icon tooltip-button icon-pencil"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}